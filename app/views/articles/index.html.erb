<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan= "3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do  |article|  %>
            <tr>   
                <td><%= article.title %></td> 
                <td><%= article.description%></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%=  button_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></td>  <%# link_to ftiaxnei ena link me onoma delete kai to path me paei  sto show action kai  to id pou ektupwthike  ekeinh th stigmh %> 
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
