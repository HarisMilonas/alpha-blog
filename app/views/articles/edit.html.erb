<h1>Edit  article</h1>

<% if @article.errors.any? %>  <%# kwdikas gia error display message se periptwsh lathos kataxwrhshs%>
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
     <% @article.errors.full_messages.each do |msg| %>  <%# einai h errors.full_messages mia methodos pou sou kanei display ola ta errors poy ginane%>
         <li><%= msg %> </li>
    <% end %>
    </ul>
<% end %>
<%= form_with(model: @article,local: true)  do |f| %>
<p>
    <%= f.label :title%> <br/>
    <%= f.text_field :title%>
</p>
<p>
    <%= f.label :description%><br/>
    <%= f.text_area :description %>
</p>
<p>
    <%= f.submit %>
</p>

<% end %>